{% extends "UserUserBundle::layout.html.twig" %}


{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    {% if error %}
        <div id="error" class="col-lg-4 col-md-4 col-sm-4 col-xs-4"><div id="glyph" class="glyphicon glyphicon-warning-sign col-lg-1 col-md-1 col-sm-1 col-xs-1"></div><p class="col-lg-11 col-md-11 col-sm-11 col-xs-11 robotomed">{{ error.messageKey|trans(error.messageData, 'security') }}</p></div>

    {% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="col-lg-12">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div id="input" style="margin-top:76px;" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mgti">
        <div id="icon" class="glyphicon glyphicon-user col-lg-1 col-md-1 col-sm-1 col-xs-1 height"></div>
        <input placeholder="Login" type="text" id="border" name="_username" value="{{ last_username }}" required="required" class="robotomed col-lg-11 col-md-11 col-sm-11 col-xs-11 height" />
    </div>

    <div id="input" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div id="icon" class="glyphicon glyphicon-lock col-lg-1 col-md-1 col-sm-1 col-xs-1 height"></div>
        <input type="password" id="border" name="_password" required="required" type="password" placeholder="Mot de passe" class="robotomed col-lg-11 col-md-11 col-sm-11 col-xs-11 height"/>
    </div>





    <p id="check" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pull-left robotolight">Se souvenir de moi
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /></p>

    <input type="submit" id="boutton" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-default robotomed col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4" />
    <a class="robotolight col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4" id="mdpoub" href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©?</a>

</form>
{% endblock fos_user_content %}
