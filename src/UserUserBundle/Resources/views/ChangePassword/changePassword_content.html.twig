{% block script %}
    <script type="text/javascript">
        $(document).ready(function(){
            $("#boutton").attr("disabled", "disabled");


            $("#border2").keyup(function(){


                var second = $(this).val();
                var first = $("#border").val();


                if(first == second){
                    $("#boutton").removeAttr("disabled");
                    $("#boutton").attr("class", "transition btn btn-default robotomed col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4");
                } else {

                    $("#boutton").attr("disabled", "disabled");
                    $("#boutton").attr("class", "transitiondis btn btn-default robotomed col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4");
                };
            });
        });
    </script>
