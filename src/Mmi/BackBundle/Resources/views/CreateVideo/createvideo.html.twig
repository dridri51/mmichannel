{% extends '::baseuser.html.twig' %}

{% block content %}
    <div class="col-xs-10">
        <div class="content">
            <div class="col-xs-12">
                <div class="content_header">
                    <h1>Ajouter une vid√©o</h1>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="new_video content_bloc">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(form.vidLink) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(form.vidLink, { 'attr': {'class' : 'form-control','placeholder' :'URL'}}) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                        </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-2 text-right">
                                        <p>{{ form_label(form.playlist) }}</p>
                                    </div>
                                    <div class="col-xs-10">
                                        {{ form_widget(form.playlist) }}
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    {{ form_row(form.Enregistrer, { 'attr': {'class' :'btn pull-right'}}) }}
                    <div class="clear"></div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>

{% endblock %}

