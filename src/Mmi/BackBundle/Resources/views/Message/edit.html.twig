{% extends "::baseuser.html.twig" %}
{% block content %}
    <div class="col-xs-10">
        <div class="content">
            <div class="col-xs-12">
                <div class="content_header">
                    <h1>Modifier un message</h1>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="new_message content_bloc">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(form.msgType) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(form.msgType, { 'attr': {'class' : 'form-control'}}) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(form.msgTitre) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(form.msgTitre, { 'attr': {'class' : 'form-control'}}) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(form.msgDate) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(form.msgDate, { 'attr': {'class' : 'form-control'}}) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(form.msgText) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(form.msgText, { 'attr': {'class' : 'form-control','rows':'6'}}) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    {{ form_row(form.Enregistrer, { 'attr': {'class': 'btn pull-right'}}) }} <!-- Entrer le message de la BDD -->
                    <div class="clear"></div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>{% endblock %}