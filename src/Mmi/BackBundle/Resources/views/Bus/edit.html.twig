{% extends '::baseuser.html.twig' %}

{% block content -%}
    <div class="col-xs-10">
        <div class="content">
            <div class="col-xs-12">
                <div class="content_header">
                    <h1>Ajouter un bus</h1>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="modif_bus content_bloc">
                    {{ form_start(edit_form) }}
                    {{ form_errors(edit_form) }}
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(edit_form.busNum) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(edit_form.busNum, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Ligne nÂ°'}}) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(edit_form.busHeure) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(edit_form.busHeure, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Heure'}}) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(edit_form.busDesti) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(edit_form.busDesti, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Heure'}}) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    {{ form_row(edit_form.submit, { 'attr' : { 'class' : 'btn pull-right'} }) }}<!-- Entrer dans la BDD -->
                    <div class="clear"></div>
                    {{ form_rest(edit_form) }}
                    {{ form_end(edit_form) }}
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
{% endblock %}
