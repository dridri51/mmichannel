{% extends '::baseuser.html.twig' %}

{% block content -%}
    <div class="col-xs-10">
        <div class="content">
            <div class="col-xs-12">
                <div class="content_header">
                    <h1>Modifier une playlist</h1>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="modif_playlist content_bloc">
                    {{ form_start(edit_form) }}
                    {{ form_errors(edit_form) }}
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(edit_form.plNom) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(edit_form.plNom, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(edit_form.creneau) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(edit_form.creneau) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-2 text-right">
                                <p>{{ form_label(edit_form.plDuree) }}</p>
                            </div>
                            <div class="col-xs-10">
                                {{ form_widget(edit_form.plDuree, { 'attr': {'class': 'form-control','disabled' : 'disabled'} }) }}
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                    {{ form_row(edit_form.submit, { 'attr': {'class': 'btn pull-right'} }) }}

                    <div class="clear"></div>
                    {{ form_rest(edit_form) }}
                    {{ form_end(edit_form) }}
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class="clear"></div>
{% endblock %}

